---
import "../assets/global.css";
import Navbar from "../components/Navbar.astro";
// Props: title required, allTypes and activeType optional
interface Props {
  title: string;
  allTypes?: string[];
  activeType?: string;
}

// Provide defaults for optional props
const { title, allTypes = [], activeType = "" } = Astro.props as Props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <div class="layout">
      <Navbar allTypes={allTypes} activeType={activeType} />
      <main class="main-container">
        <slot />
      </main>
    </div>
    <!-- Client-side scripts -->
    <script is:inline src="/scripts/card-nav.js"></script>
    <script type="module" src="/scripts/sidebar-theme-toggle.js"></script>
  </body>
</html>
