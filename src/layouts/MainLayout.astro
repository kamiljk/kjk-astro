---
import "../assets/global.css";
import Navbar from "../components/Navbar.astro";
import HeroCard from "../components/HeroCard.astro"; // Import HeroCard

// Props: title required, allTypes and activeType optional
interface Props {
  title: string;
  allTypes?: string[];
  activeType?: string;
}

// Provide defaults for optional props
const { title, allTypes = [], activeType = "" } = Astro.props as Props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script is:inline type="module" src="../scripts/navbar-theme-toggle.js"
    ></script>
    <script is:inline type="module" src="../scripts/mobile-menu-toggle.js"
    ></script>
    <script is:inline type="module" src="../scripts/sidebar-theme-toggle.js"
    ></script>
  </head>
  <body>
    <div class="layout">
      <Navbar allTypes={allTypes} activeType={activeType} />
      <main class="main-container">
        <slot />
      </main>
      <HeroCard title="" />
    </div>

    <!-- Load card-nav.js externally at end of body -->
    <script src="/scripts/card-nav.js" defer type="module"></script>
  </body>
</html>
